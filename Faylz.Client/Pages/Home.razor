@page "/"
@using Pages
<PageTitle>Faylz - Tools that run locally on your machine</PageTitle>

<div class="relative bg-gradient-to-br from-blue-50 to-indigo-100 py-16">
    <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-12">
            <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900 mb-6">
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600">Local File Tools</span>
            </h1>
            <p class="text-xl text-gray-600 mb-8">Powerful file processing tools that run entirely on your machine - no server uploads, complete privacy.</p>
            <div class="flex flex-wrap justify-center gap-4">
                <a href="#tools" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg shadow-md hover:bg-blue-700 transition transform hover:-translate-y-0.5 cursor-pointer">
                    Explore Tools
                </a>
                <a href="/about" class="px-6 py-3 bg-white text-blue-600 font-medium rounded-lg shadow-md hover:bg-gray-50 transition transform hover:-translate-y-0.5 cursor-pointer">
                    Learn More
                </a>
            </div>
        </div>
            
    </div>
</div>

@if (!RendererInfo.IsInteractive)
{
    <div class="fixed inset-0 flex flex-col items-center justify-center z-50 bg-white/90 backdrop-blur-sm">
        <div class="text-2xl font-bold text-gray-800 animate-bounce">Loading your tools...</div>
        <div class="mt-4 flex space-x-2">
            <div class="w-5 h-5 bg-blue-500 rounded-full animate-bounce delay-100"></div>
            <div class="w-5 h-5 bg-green-500 rounded-full animate-bounce delay-200"></div>
            <div class="w-5 h-5 bg-red-500 rounded-full animate-bounce delay-300"></div>
            <div class="w-5 h-5 bg-yellow-500 rounded-full animate-bounce delay-400"></div>
        </div>
        <div class="mt-4 text-sm text-gray-700 animate-pulse">Hang tight, we're getting things ready!</div>
    </div>
}

<div id="tools" class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="mb-12 text-center">
            <h2 class="text-3xl font-bold mb-2">Our Tools</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">All tools run directly in your browser - your files never leave your device.</p>
        </div>
        
        <div class="mb-12">
            <h3 class="text-2xl font-bold mb-6 px-4 py-2 bg-blue-50 text-blue-700 rounded-lg inline-block">Image Tools</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <ToolCard Title="Compress JPG" Description="Reduce the file size of JPG images while maintaining quality. Perfect for websites and sharing." Link="/jpg/compress" />
                <ToolCard Title="Compress PNG" Description="Optimize PNG images to reduce file size without losing transparency or quality." Link="/png/compress" IsNew="true" />
                <ToolCard Title="JPG to PNG" Description="Convert JPG images to PNG format with transparency support." Link="/jpg-png" IsNew="true" />
                <ToolCard Title="PNG to JPG" Description="Convert PNG images to JPG format with customizable quality settings." Link="/png-jpg" IsNew="true" />
                <ToolCard Title="Resize Image" Description="Resize images to exact dimensions while preserving aspect ratio and quality." Link="/image/resize" IsNew="true" />
            </div>
        </div>

        <div class="mb-12">
            <h3 class="text-2xl font-bold mb-6 px-4 py-2 bg-blue-50 text-blue-700 rounded-lg inline-block">Document Tools</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <ToolCard Title="PDF to Word" Description="Convert PDF documents to editable Word format with text and layout preservation." Link="/pdf-word" IsComingSoon="true" />
                <ToolCard Title="Word to PDF" Description="Convert Word documents to PDF format for universal compatibility." Link="/word-pdf" IsComingSoon="true" />
                <ToolCard Title="Merge PDFs" Description="Combine multiple PDF files into a single document with custom ordering." Link="/pdf/merge" IsComingSoon="true" />
                <ToolCard Title="Split PDF" Description="Split a PDF into multiple files by page ranges or extract specific pages." Link="/pdf/split" IsComingSoon="true" />
            </div>
        </div>
    </div>
</div>

<div class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-6">Why Choose Faylz?</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
                <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center bg-blue-100 text-blue-600 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-2">100% Private</h3>
                <p class="text-gray-600">Your files never leave your device. All processing happens right in your browser.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center bg-blue-100 text-blue-600 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-2">Lightning Fast</h3>
                <p class="text-gray-600">No waiting for uploads or downloads. Process files instantly with blazing speeds.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center bg-blue-100 text-blue-600 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-2">Available Offline</h3>
                <p class="text-gray-600">Use our tools even without an internet connection after the initial load.</p>
            </div>
        </div>
    </div>
</div>

@code {
    public record Tool(string Title, string Description, string Link);
}