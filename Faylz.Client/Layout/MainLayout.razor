@inherits LayoutComponentBase
@using Faylz.Client.Components

<div class="min-h-screen flex flex-col bg-gray-50">
    <header class="bg-white shadow-sm" role="banner">
        <nav class="container mx-auto px-4 py-3" aria-label="Main navigation">
            <div class="flex justify-between items-center">
                <a href="/" class="flex items-center space-x-2 cursor-pointer" aria-label="Homepage">
                    <span class="text-2xl font-bold text-blue-600">Faylz</span>
                </a>
                
                <button @onclick="ToggleMobileMenu" class="md:hidden p-2 rounded-md hover:bg-gray-100 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
                
                <div class="hidden md:flex md:space-x-4 md:items-center">
                    <NavLink href="/" class="text-gray-600 hover:text-blue-600 transition cursor-pointer" ActiveClass="text-blue-600 font-medium" Match="NavLinkMatch.All">Home</NavLink>
                    
                    <div class="relative group">
                        <button class="flex items-center text-gray-600 hover:text-blue-600 transition cursor-pointer">
                            <span>Image Tools</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </button>
                        <div class="absolute left-0 mt-2 w-48 rounded-md shadow-lg bg-white z-10 hidden group-hover:block animate-fadeIn">
                            <div class="py-1">
                                <NavLink href="/jpg/compress" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Compress JPG</NavLink>
                                <NavLink href="/png/compress" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Compress PNG</NavLink>
                                <NavLink href="/jpg-png" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">JPG to PNG</NavLink>
                                <NavLink href="/png-jpg" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">PNG to JPG</NavLink>
                                <NavLink href="/image/resize" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Resize Image</NavLink>
                            </div>
                        </div>
                    </div>
                    
                    <div class="relative group">
                        <button class="flex items-center text-gray-600 hover:text-blue-600 transition cursor-pointer">
                            <span>Document Tools</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </button>
                        <div class="absolute left-0 mt-2 w-48 rounded-md shadow-lg bg-white z-10 hidden group-hover:block animate-fadeIn">
                            <div class="py-1">
                                <NavLink href="/pdf/merge" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Merge PDFs</NavLink>
                            </div>
                        </div>
                    </div>
                    
                    <NavLink href="/about" class="text-gray-600 hover:text-blue-600 transition cursor-pointer" ActiveClass="text-blue-600 font-medium">About</NavLink>
                    <NavLink href="/privacy" class="text-gray-600 hover:text-blue-600 transition cursor-pointer" ActiveClass="text-blue-600 font-medium">Privacy</NavLink>
                </div>
            </div>
            
            <div class="md:hidden overflow-hidden transition-all duration-300 ease-in-out @(isMobileMenuOpen ? "max-h-96 opacity-100" : "max-h-0 opacity-0")">
                <div class="mt-3 pt-3 border-t border-gray-200">
                    <NavLink href="/" class="block py-2 text-gray-600 hover:text-blue-600 transition cursor-pointer" ActiveClass="text-blue-600 font-medium" Match="NavLinkMatch.All">Home</NavLink>
                    
                    <div class="py-2">
                        <button @onclick="ToggleImageDropdown" class="flex w-full justify-between items-center text-gray-600 hover:text-blue-600 transition cursor-pointer">
                            <span>Image Tools</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform duration-300 @(isImageDropdownOpen ? "rotate-180" : "")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </button>
                        <div class="overflow-hidden transition-all duration-300 ease-in-out @(isImageDropdownOpen ? "max-h-96 opacity-100" : "max-h-0 opacity-0")">
                            <div class="mt-2 pl-4 border-l-2 border-gray-200">
                                <NavLink href="/jpg/compress" class="block py-2 text-gray-600 hover:text-blue-600">Compress JPG</NavLink>
                                <NavLink href="/png/compress" class="block py-2 text-gray-600 hover:text-blue-600">Compress PNG</NavLink>
                                <NavLink href="/jpg-png" class="block py-2 text-gray-600 hover:text-blue-600">JPG to PNG</NavLink>
                                <NavLink href="/png-jpg" class="block py-2 text-gray-600 hover:text-blue-600">PNG to JPG</NavLink>
                                <NavLink href="/image/resize" class="block py-2 text-gray-600 hover:text-blue-600">Resize Image</NavLink>
                            </div>
                        </div>
                    </div>
                    
                    <div class="py-2">
                        <button @onclick="ToggleDocumentDropdown" class="flex w-full justify-between items-center text-gray-600 hover:text-blue-600 transition cursor-pointer">
                            <span>Document Tools</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform duration-300 @(isDocumentDropdownOpen ? "rotate-180" : "")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </button>
                        <div class="overflow-hidden transition-all duration-300 ease-in-out @(isDocumentDropdownOpen ? "max-h-96 opacity-100" : "max-h-0 opacity-0")">
                            <div class="mt-2 pl-4 border-l-2 border-gray-200">
                                <NavLink href="/pdf/merge" class="block py-2 text-gray-600 hover:text-blue-600">Merge PDFs</NavLink>
                            </div>
                        </div>
                    </div>
                    
                    <NavLink href="/about" class="block py-2 text-gray-600 hover:text-blue-600 transition cursor-pointer" ActiveClass="text-blue-600 font-medium">About</NavLink>
                    <NavLink href="/privacy" class="block py-2 text-gray-600 hover:text-blue-600 transition cursor-pointer" ActiveClass="text-blue-600 font-medium">Privacy</NavLink>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow pb-16" role="main" id="main-content">
        @Body
    </main>

    <footer class="bg-gray-800 text-white py-8" role="contentinfo">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h3 class="text-lg font-semibold mb-3">Faylz</h3>
                    <p class="text-gray-300 text-sm">Powerful file tools that run completely on your machine. No uploads to servers, protecting your privacy.</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-3">Tools</h3>
                    <ul class="space-y-2 text-sm text-gray-300" aria-label="Tool links">
                        <li><a href="/jpg/compress" class="hover:text-blue-400 transition cursor-pointer">JPG Compression</a></li>
                        <li><a href="/png/compress" class="hover:text-blue-400 transition cursor-pointer">PNG Compression</a></li>
                        <li><a href="/pdf/merge" class="hover:text-blue-400 transition cursor-pointer">PDF Tools</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-3">Links</h3>
                    <ul class="space-y-2 text-sm text-gray-300" aria-label="Site links">
                        <li><a href="/about" class="hover:text-blue-400 transition cursor-pointer">About</a></li>
                        <li><a href="/privacy" class="hover:text-blue-400 transition cursor-pointer">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-8 pt-6 border-t border-gray-700 text-center text-sm text-gray-400">
                &copy; @DateTime.Now.Year Faylz. All rights reserved.
            </div>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet class="fixed bottom-0 left-0 right-0 bg-red-600 text-white p-3 z-50 shadow-lg flex justify-between items-center" aria-live="assertive">
    <span>An unhandled error has occurred.</span>
    <div class="flex space-x-2">
        <a href="." class="bg-white text-red-600 px-3 py-1 rounded text-sm font-medium hover:bg-gray-100 transition cursor-pointer">Reload</a>
        <button class="text-white hover:text-gray-200 transition dismiss cursor-pointer" aria-label="Dismiss error">×</button>
    </div>
</div>

@code {
    private bool isMobileMenuOpen = false;
    private bool isImageDropdownOpen = false;
    private bool isDocumentDropdownOpen = false;
    
    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }
    
    private void ToggleImageDropdown()
    {
        isImageDropdownOpen = !isImageDropdownOpen;
        if (isImageDropdownOpen && isDocumentDropdownOpen)
        {
            isDocumentDropdownOpen = false;
        }
    }
    
    private void ToggleDocumentDropdown()
    {
        isDocumentDropdownOpen = !isDocumentDropdownOpen;
        if (isDocumentDropdownOpen && isImageDropdownOpen)
        {
            isImageDropdownOpen = false;
        }
    }
}
