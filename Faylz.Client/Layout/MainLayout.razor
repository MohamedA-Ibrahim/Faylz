@inherits LayoutComponentBase

<div class="min-h-screen flex flex-col bg-gray-50">
    <header class="bg-white shadow-sm">
        <nav class="container mx-auto px-4 py-3 flex justify-between items-center">
            <a href="/" class="flex items-center space-x-2">
                <span class="text-2xl font-bold text-blue-600">Faylz</span>
            </a>
            <div class="flex space-x-4 items-center">
                <NavLink href="/" class="text-gray-600 hover:text-blue-600 transition">Home</NavLink>
                <NavLink href="/about" class="text-gray-600 hover:text-blue-600 transition">About</NavLink>
            </div>
        </nav>
    </header>

    <main class="flex-grow">
        @Body
    </main>

    <footer class="bg-gray-800 text-white py-8">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h3 class="text-lg font-semibold mb-3">Faylz</h3>
                    <p class="text-gray-300 text-sm">Powerful file tools that run completely on your machine. No uploads to servers, protecting your privacy.</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-3">Tools</h3>
                    <ul class="space-y-2 text-sm text-gray-300">
                        <li><a href="/jpg/compress" class="hover:text-blue-400 transition">JPG Compression</a></li>
                        <li><a href="#" class="hover:text-blue-400 transition">PNG Compression</a></li>
                        <li><a href="#" class="hover:text-blue-400 transition">PDF Tools</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-3">Links</h3>
                    <ul class="space-y-2 text-sm text-gray-300">
                        <li><a href="/about" class="hover:text-blue-400 transition">About</a></li>
                        <li><a href="/privacy" class="hover:text-blue-400 transition">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-8 pt-6 border-t border-gray-700 text-center text-sm text-gray-400">
                &copy; @DateTime.Now.Year Faylz. All rights reserved.
            </div>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet class="fixed bottom-0 left-0 right-0 bg-red-600 text-white p-3 z-50 shadow-lg flex justify-between items-center">
    <span>An unhandled error has occurred.</span>
    <div class="flex space-x-2">
        <a href="." class="bg-white text-red-600 px-3 py-1 rounded text-sm font-medium hover:bg-gray-100 transition">Reload</a>
        <button class="text-white hover:text-gray-200 transition dismiss">×</button>
    </div>
</div>
